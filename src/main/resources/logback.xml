<configuration scan="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender" level="TRACE">
        <encoder>
            <pattern>%d %7([%level]) %logger{15} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.vertx" level="DEBUG"/>

    <logger name="com.hazelcast" level="ERROR"/>

    <logger name="io.netty.util.internal.PlatformDependent" level="ERROR"/>

    <logger name="io.vertx.ext.web" level="TRACE"/>

    <logger name="com.lxbluem.EventLogger" level="TRACE"/>

    <logger name="com.lxbluem.stats" level="off"/>
    <!--<logger name="com.lxbluem" level="DEBUG"/>-->

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
